<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFDFD"
    tools:context=".MainActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CarGoRent Management"
        android:layout_marginTop="20dp"
        android:textSize="25dp"
        android:gravity="center"
        android:padding="16dp"
        android:textColor="#4B0082"
        android:textStyle="bold" />

    <!-- Search Bar -->
    <RelativeLayout
        android:id="@+id/relativeLayoutSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTitle"
        android:padding="16dp">

        <!-- Search EditText -->
        <EditText
            android:id="@+id/editTextSearch"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Search now"
            android:paddingStart="48dp"
            android:paddingEnd="12dp"
            android:background="@drawable/edit_text_border"
            android:textColor="#000000"
            android:inputType="text"
            android:layout_marginBottom="5dp"
            android:singleLine="true"
            android:textSize="16sp" />

        <!-- Search Icon -->
        <ImageView
            android:id="@+id/imageViewSearch"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/editTextSearch"
            android:layout_alignTop="@+id/editTextSearch"
            android:layout_marginStart="12dp"
            android:src="@drawable/img_3"
            android:padding="4dp" />

        <!-- Horizontal ScrollView for Buttons -->
        <HorizontalScrollView
            android:id="@+id/horizontalScrollViewButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTextSearch"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Button: All -->
                <Button
                    android:id="@+id/buttonAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All"
                    android:layout_marginEnd="8dp" />

                <!-- Button: Top Price -->
                <Button
                    android:id="@+id/buttonTopPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Top Price"
                    android:layout_marginEnd="8dp" />

                <!-- Button: Automatic -->
                <Button
                    android:id="@+id/buttonAutomatic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Automatic"
                    android:layout_marginEnd="8dp" />

                <!-- Button: SUV -->
                <Button
                    android:id="@+id/buttonSUV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SUV"
                    android:layout_marginEnd="8dp" />

                <!-- Button: Manual -->
                <Button
                    android:id="@+id/buttonManual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manual"
                    android:layout_marginEnd="8dp" />

            </LinearLayout>
        </HorizontalScrollView>

        <!-- Button and Label Below HorizontalScrollView -->
        <LinearLayout
            android:id="@+id/linearLayoutButtonLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/horizontalScrollViewButtons"

            android:layout_marginTop="16dp"

            >

            <!-- Button -->
            <Button
                android:id="@+id/buttonRight"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:text="Reset"
                android:textSize="10sp"
                android:layout_marginTop="0dp"
                android:padding="5dp"
                android:layout_marginRight="190dp"
                />


            <!-- Label -->
            <TextView
                android:id="@+id/textViewRightLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" # of Results"
                android:layout_marginTop="0dp"

                android:textSize="16sp"
                android:layout_marginEnd="8dp" />
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
