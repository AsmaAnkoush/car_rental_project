<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/Bblue"
    android:background="@color/Bblue"
    tools:context=".ManageFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">
        <TextView android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/update_car_to_system"
            android:textColor="#4B0082"
            android:textStyle="bold"
            style="@style/TextStyle.Title"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"/>

        <ImageView
            android:id="@+id/upCarimageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>
        <!--  Type of New Car  -->

        <TextView
            android:id="@+id/uptextModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/model"
            style="@style/TextStyle.Label"
            android:layout_marginTop="16dp"/>

        <!--  Model Year  -->

        <EditText
            android:id="@+id/upeditModel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textModel"
            android:layout_marginTop="6dp"
            android:hint="@string/enter_model"
            />

        <TextView
            android:id="@+id/uptextModelYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editType"
            style="@style/TextStyle.Label"
            android:text="@string/model_year"
             />

        <EditText
            android:id="@+id/editModelYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_model_year"

            style="@style/TextStyle.edt"
            android:layout_marginTop="8dp"/>
        <!--  Color  -->

        <TextView
            android:id="@+id/uptextColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/color"
            style="@style/TextStyle.Label"
            android:layout_marginTop="16dp"/>
        <EditText
            android:id="@+id/upeditColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_color"
            style="@style/TextStyle.edt"
            android:layout_marginTop="8dp"/>
        <TextView
            android:id="@+id/uptextType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/using_type_of_new_car"
            style="@style/TextStyle.Label"
            android:layout_marginTop="16dp"/>
        <EditText
            android:id="@+id/upeditType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_usong_type_of_new_car"
            style="@style/TextStyle.edt"
            android:layout_marginTop="8dp"/>
        <!--  Type of Benz  -->
        <TextView
            android:id="@+id/uptextBenz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/type_of_benz"

            style="@style/TextStyle.Label"

            android:layout_marginTop="16dp"/>
        <Spinner
            android:id="@+id/upspinnerBenz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="8dp"/>
        <!--  Car Number  -->
        <TextView android:id="@+id/uptextCarNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/car_number"
            style="@style/TextStyle.Label"
            android:layout_marginTop="16dp"/>

        <EditText android:id="@+id/upeditCarNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_car_number"
            style="@style/TextStyle.edt"
            android:layout_marginTop="8dp"/>
        <!--  Number of Passengers  -->
        <TextView
            android:id="@+id/uptextPassengers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/number_of_passengers"
            style="@style/TextStyle.Label"
            android:layout_marginTop="16dp"/>

        <EditText android:id="@+id/upeditPassengers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_number_of_passengers"
            style="@style/TextStyle.edt"
            android:layout_marginTop="8dp"/>
        <!--  Rental Price per Day  -->
        <TextView
            android:id="@+id/uptextRentalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rental_price_per_day"
           style="@style/TextStyle.Label"
            android:layout_marginTop="16dp"/>
        <EditText
            android:id="@+id/upeditRentalPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_rental_price_per_day"
            style="@style/TextStyle.edt"
           />
        <!--  Make Company  -->
        <TextView
            android:id="@+id/uptextMakeCompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/make_company"
            style="@style/TextStyle.Label"
            />
        <EditText
            android:id="@+id/upeditMakeCompany"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_make_company"
            style="@style/TextStyle.edt"
           />
        <!--  Status  -->
        <TextView
            android:id="@+id/uptextStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/status"
            style="@style/TextStyle.Label"
          />
        <Spinner
            android:id="@+id/upspinnerStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"/>
        <!--  Description  -->
        <TextView
            android:id="@+id/uptextDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/description"
            style="@style/TextStyle.Label"/>
        <EditText
            android:id="@+id/upeditDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_description"
           style="@style/TextStyle.edt"/>
        <!--  Image  -->
        <TextView
            android:id="@+id/uptextImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/image"
            style="@style/TextStyle.Label" />
        <Button
            android:id="@+id/upbuttonSelectImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_image"
            android:layout_marginTop="8dp"/>
        <EditText
            android:id="@+id/uptext_Image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/imagee"
            style="@style/TextStyle.Label"
            />
        <!--  Placeholder for the selected image  -->
        <ImageView
            android:id="@+id/upimageViewSelected"
            android:layout_width="200dp"
            android:layout_height="200dp"

            android:layout_marginTop="8dp"
            android:visibility="gone"/>
        <!--  Buttons for Save and Cancel  -->

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:layout_below="@id/imageViewSelected" android:layout_marginTop="16dp">
            <Button
                android:id="@+id/upbuttonSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Save"
                android:layout_marginEnd="8dp"
                android:textColor="@android:color/white"
                android:layout_marginBottom="50dp"/>
            <Button
                android:id="@+id/upbuttonCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancel"
                android:textColor="@android:color/white"
                android:layout_marginBottom="50dp"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
