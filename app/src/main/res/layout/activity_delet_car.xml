<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/Bblue"
    android:background="@color/Bblue"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete_car"
        style="@style/TextStyle.Title"
        android:textColor="#4B0082"
        android:textStyle="bold"

        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"/>

    <!-- Car Information -->
    <TextView
        android:id="@+id/textCarInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/car_information"
        style="@style/TextStyle.Label"

        android:textColor="@android:color/black"
        android:layout_below="@id/title"
        android:layout_marginTop="16dp"/>

    <!-- Display Car Information Here -->
    <TextView
        android:id="@+id/carInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_below="@id/textCarInfo"
        android:layout_marginTop="8dp"/>

    <!-- Confirmation Message -->
    <TextView
        android:id="@+id/textConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/are_you_sure_you_want_to_delete_this_car"
        android:layout_below="@id/carInfo"
        style="@style/TextStyle.Label"
        android:layout_marginTop="16dp"/>

    <!-- Buttons for Confirm and Cancel -->
    <LinearLayout
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textConfirm"
        android:layout_marginTop="39dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:text="@string/confirm"
            />


    </LinearLayout>


</RelativeLayout>

